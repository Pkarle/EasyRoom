{% extends 'layouts/front.html.twig' %}

{% block title %}Property{% endblock %}

{% block ban %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {% set active = null %}
        {% for picture in property.pictures %}
            <div class="carousel-item {% if active is null %}active{% endif %} ">
                <img src="{{ asset('uploads/property/images/' ~  picture) }}" class="d-block w-100" alt="...">
                <div class="background" style="background-image: url('/uploads/property/images/{{ picture }}')"></div>
            </div>
            {% set active = 'notnull' %}
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
{% endblock %}

{% block body %}

<section id="property-content">
    <h2 class="content">{{ property.name }}</h2>
    <p class="content">{{ property.description }}</p>
    <ul class="content">
        {% for equipment in property.equipments %}
            <li>{{ equipment.name }} - {{ equipment.description }}</li>
        {% endfor %}
    </ul>
</section>

{% endblock %}
